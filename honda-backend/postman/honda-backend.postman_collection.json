{
  "info": {
    "_postman_id": "honda-backend-collection",
    "name": "honda-backend-tests",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Create Admin",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "x-role", "value": "admin" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"name\":\"Alice Admin\",\"role\":\"admin\"}"
        },
        "url": { "raw": "{{baseUrl}}/api/users", "host": ["{{baseUrl}}"], "path": ["api","users"] }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('status is 201', function () { pm.response.to.have.status(201); });",
              "var body = pm.response.json();",
              "pm.environment.set('adminId', body._id);"
            ]
          }
        }
      ]
    },
    {
      "name": "Create Agent",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "x-role", "value": "admin" }
        ],
        "body": { "mode": "raw", "raw": "{\"name\":\"Bob Agent\",\"role\":\"agent\"}" },
        "url": { "raw": "{{baseUrl}}/api/users", "host": ["{{baseUrl}}"], "path": ["api","users"] }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('agent created', function () { pm.response.to.have.status(201); });",
              "pm.environment.set('agentId', pm.response.json()._id);"
            ]
          }
        }
      ]
    },
    {
      "name": "Create Item",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "x-role", "value": "admin" }
        ],
        "body": { "mode": "raw", "raw": "{\"name\":\"Brake Pad\",\"sku\":\"BP-001\",\"barcode\":\"1234567890123\",\"qty\":10}" },
        "url": { "raw": "{{baseUrl}}/api/items", "host": ["{{baseUrl}}"], "path": ["api","items"] }
      },
      "event": [
        {
          "listen": "test",
          "script": { "exec": ["pm.test('item created', function () { pm.response.to.have.status(201); });","pm.environment.set('itemId', pm.response.json()._id);"] }
        }
      ]
    },
    {
      "name": "Create Service",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "x-role", "value": "admin" }
        ],
        "body": { "mode": "raw", "raw": "{\"name\":\"Oil Change\",\"price\":25,\"barcode\":\"SVC-001\"}" },
        "url": { "raw": "{{baseUrl}}/api/services", "host": ["{{baseUrl}}"], "path": ["api","services"] }
      },
      "event": [
        {
          "listen": "test",
          "script": { "exec": ["pm.test('service created', function () { pm.response.to.have.status(201); });","pm.environment.set('serviceId', pm.response.json()._id);"] }
        }
      ]
    },
    {
      "name": "Assign Item to Agent",
      "request": {
        "method": "PATCH",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "x-role", "value": "admin" }
        ],
        "body": { "mode": "raw", "raw": "{\"assignedTo\":\"{{agentId}}\"}" },
        "url": { "raw": "{{baseUrl}}/api/items/{{itemId}}", "host": ["{{baseUrl}}"], "path": ["api","items","{{itemId}}"] }
      },
      "event": [ { "listen": "test", "script": { "exec": ["pm.test('assigned item', function () { pm.response.to.have.status(200); });"] } } ]
    },
    {
      "name": "Assign Service to Agent",
      "request": {
        "method": "PATCH",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "x-role", "value": "admin" }
        ],
        "body": { "mode": "raw", "raw": "{\"assignedTo\":\"{{agentId}}\"}" },
        "url": { "raw": "{{baseUrl}}/api/services/{{serviceId}}", "host": ["{{baseUrl}}"], "path": ["api","services","{{serviceId}}"] }
      },
      "event": [ { "listen": "test", "script": { "exec": ["pm.test('assigned service', function () { pm.response.to.have.status(200); });"] } } ]
    },
    {
      "name": "Agent: List Items",
      "request": {
        "method": "GET",
        "header": [ { "key": "x-role", "value": "agent" }, { "key": "x-user-id", "value": "{{agentId}}" } ],
        "url": { "raw": "{{baseUrl}}/api/items", "host": ["{{baseUrl}}"], "path": ["api","items"] }
      },
      "event": [ { "listen": "test", "script": { "exec": ["pm.test('agent items OK', function () { pm.response.to.have.status(200); });"] } } ]
    },
    {
      "name": "Agent: List Services",
      "request": {
        "method": "GET",
        "header": [ { "key": "x-role", "value": "agent" }, { "key": "x-user-id", "value": "{{agentId}}" } ],
        "url": { "raw": "{{baseUrl}}/api/services", "host": ["{{baseUrl}}"], "path": ["api","services"] }
      },
      "event": [ { "listen": "test", "script": { "exec": ["pm.test('agent services OK', function () { pm.response.to.have.status(200); });"] } } ]
    },
    {
      "name": "Agent: Scan Item",
      "request": {
        "method": "GET",
        "header": [ { "key": "x-role", "value": "agent" }, { "key": "x-user-id", "value": "{{agentId}}" } ],
        "url": { "raw": "{{baseUrl}}/api/items/scan/1234567890123", "host": ["{{baseUrl}}"], "path": ["api","items","scan","1234567890123"] }
      },
      "event": [ { "listen": "test", "script": { "exec": ["pm.test('scan item found', function () { pm.response.to.have.status(200); });"] } } ]
    },
    {
      "name": "Agent: Scan Service",
      "request": {
        "method": "GET",
        "header": [ { "key": "x-role", "value": "agent" }, { "key": "x-user-id", "value": "{{agentId}}" } ],
        "url": { "raw": "{{baseUrl}}/api/services/scan/SVC-001", "host": ["{{baseUrl}}"], "path": ["api","services","scan","SVC-001"] }
      },
      "event": [ { "listen": "test", "script": { "exec": ["pm.test('scan service found', function () { pm.response.to.have.status(200); });"] } } ]
    },
    {
      "name": "Agent: Forbidden Create User",
      "request": {
        "method": "POST",
        "header": [ { "key": "Content-Type", "value": "application/json" }, { "key": "x-role", "value": "agent" }, { "key": "x-user-id", "value": "{{agentId}}" } ],
        "body": { "mode": "raw", "raw": "{\"name\":\"ShouldFail\",\"role\":\"agent\"}" },
        "url": { "raw": "{{baseUrl}}/api/users", "host": ["{{baseUrl}}"], "path": ["api","users"] }
      },
      "event": [ { "listen": "test", "script": { "exec": ["pm.test('forbidden for agent', function () { pm.expect(pm.response.code).to.be.oneOf([401,403,400]); });"] } } ]
    }
  ]
}
